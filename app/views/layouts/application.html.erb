<!DOCTYPE html>
<html>
<head>
  <title>FastRides</title>
  <%= stylesheet_link_tag'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="contain-to-grid">
    <nav class="top-bar" data-topbar role="navigation">
      <ul class="title-area">
        <li class="name">
          <h1><%= link_to "FastRider", root_path %></h1>
        </li>
      </ul>

      <section class = "top-bar-section">
        <ul class = "right">
          <li class=active">
          <% if user_signed_in? %>
            <a href="#">
              <% unless current_user.profile_photo.nil? %>
                <%= image_tag "#{current_user.profile_photo}", size: "30x30" %>
              <% end %>
              <%= current_user.email %>
            </a>
          </li>
          <li class="has-dropdown">
            <a href="#"> <%= current_user.first_name %></a>
              <ul class="dropdown">
                <li><%= link_to "My profile", user_path(current_user) %></li>
                <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
                <li> <%= link_to 'Update', destroy_user_session_path, method: :delete %></li>
                <li> <%= link_to "#{current_user.email}", user_path(current_user) %></li>
            <% else %>
                <li><%= link_to 'Sign Up', new_user_registration_path %></li>
                <li><%= link_to 'Sign In', new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>


<%= yield %>

</body>
</html>
