<div class="row text-center">

  <h1><%= "#{@trip.origin}-#{@trip.destination}" %></h1>
  <h3 class="park-show-location"><%= @trip.origin %></h3>
  <h3 class="park-show-location"><%= @trip.destination %></h3>
  <h3 class="park-show-location">Rate:<%= @trip.rate %></h3>
  <h3 class="park-show-location">
    Driver: <%= link_to "#{@trip.driver.first_name} #{@trip.driver.last_name}", user_path(@trip.driver) %>
  </h3>
  <h3 class="park-show-location">Avaliable seats:<%= @trip.avail_cap %></h3>
  <h3 class="park-show-location">Driver Rating:<%= @trip.driver.rating %></h3>

  <% if user_signed_in? %>
    <h3 class="park-show-location"><%= @trip.meet_point %></h3>
    <h3 class="park-show-location"><%= @trip.car_make %></h3>
    <h3 class="park-show-location"><%= @trip.car_model %></h3>
    <h3 class="park-show-location"><%= @trip.car_plate %></h3>
  <% end %>

  <% if user_signed_in? && ( current_user.id == @trip.driver_id || current_user.role == "admin" ) %>
    <div class="button tiny update-butt">
      <%= button_to 'Edit', edit_trip_path(@trip), method: :get %></br>
      <%= button_to 'Delete', trip_path(@trip), method: "delete"%>
    </div>
  <% end %>
  </div>
  <div>
    <h1>Driver Reviews</h1>
      <% if user_signed_in? && !@reviews.nil? %>
        <%= render 'reviews/review' %>
      <% else %>
        <%= "No reviews have been posted yet!" %>
      <% end %>
  </div>

  <div>
    <% if user_signed_in? && current_user.id != @trip.driver.id %>
      <%= render "reviews/form" %>
    <% end %>
  </div>
